{
  "name": "diegesis-server",
  "version": "0.5.1",
  "description": "A New Apollo-based Server for Diegesis",
  "main": "src/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --testTimeout=30000",
    "start": "node src/index.js config/debug_config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Proskomma/diegesis-server.git"
  },
  "keywords": [
    "Proskomma",
    "Diegesis",
    "GraphQL",
    "Scripture"
  ],
  "author": "Mark Howe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Proskomma/diegesis-server/issues"
  },
  "homepage": "https://github.com/Proskomma/diegesis-server#readme",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.2.2",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "@graphql-tools/merge": "^8.3.18",
    "@xmldom/xmldom": "^0.8.6",
    "app-root-path": "^3.1.0",
    "axios": "^1.3.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^6.0.1",
    "jszip": "^3.10.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "proskomma-core": "^0.9.14",
    "proskomma-json-tools": "^0.6.6",
    "proskomma-utils": "^0.8.2",
    "sha": "^3.0.0",
    "winston": "^3.8.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "globals": {
      "__app__": null,
      "__server__": null,
      "__dataDir__": null
    }
  },
  "nx": {
    "implicitDependencies": [
      "diegesis-admin-client"
    ],
    "targets": {
      "start": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
